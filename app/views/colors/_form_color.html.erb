<h2>
  <%= title %>
  <%= link_to "", colors_path, class: 'btn btn-secondary fas fa-undo-alt rounded-1 float-right form-inline' %>
</h2>

<%= form_for @color do |f| %>

  <div class="container">
    <div class="row mt-3">
      <div class="col">
        <form action="">
          <div class="form-group row">
            <div class="col-12">
              <div class="row justify-content-center">
                <div class="col-12 col-sm-9 col-md-4">
                  <br>
                  <br>
                  <br>
                  <br>
                  <label><b>Color</b></label>
                  <br>
                  <%= f.text_field :color_name, :type => 'text', :class => 'form-control', :placeholder => 'Enter here color name', autofocus: true, autocomplete: 'off', required: true %>
                  <br>
                  <%= f.submit :Create, :class => 'btn btn-primary btn-block' %>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


<% end %>