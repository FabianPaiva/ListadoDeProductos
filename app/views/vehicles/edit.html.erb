<h2>
  Edit Vehicle
  <%= link_to "", vehicles_path, class: 'btn btn-secondary fas fa-undo-alt rounded-1 float-right form-inline' %>
</h2>

<%= form_for @vehicle do |edit_vehicle| %>
  <div class="container">
    <div class="row mt-3">
      <div class="col">
        <form action="">
          <div class="form-group row">
            <div class="col-12 col-md-6 mb-3">
              <br>
              <br>
              <label><b>Patent Number</b></label>
              <br>
              <%= edit_vehicle.text_field :patent_number, :type => 'text', :class => 'form-control', :placeholder => 'Enter here patent number', autofocus: true, autocomplete: 'off', :required => 'true' %>
              <br>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <br>
              <br>
              <label><b>Chassis Number</b></label>
              <br>
              <%= edit_vehicle.text_field :chassis_number, :type => 'text', :class => 'form-control', :placeholder => 'Enter here chassis number', autocomplete: 'off', :required => 'true' %>
              <br>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label><b>Vehicle Model</b></label>
              <br>
              <%= edit_vehicle.collection_select(:vehicle_models_id, VehicleModel.all.order(:vehicle_model_name), :id, :model_for_select, {:prompt => true}, {:class => 'form-control'}) %>
              <br>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label><b>Color</b></label>
              <br>
              <%= edit_vehicle.collection_select(:colors_id, Color.all.order(:color_name), :id, :color_for_select, {:prompt => true}, {:class => 'form-control'}) %>
              <br>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label><b>Client</b></label>
              <br>
              <%= edit_vehicle.collection_select(:clients_id, Client.all.order(:last_name), :id, :client_for_select, {:prompt => true}, {:class => 'form-control'}) %>
              <br>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-12 text-center">
              <div class="row justify-content-center">
                <div class="col-12 col-sm-9 col-md-4">
                  <br>
                  <%= edit_vehicle.submit :Update, :class => 'btn btn-primary btn-block' %>
                </div>
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>

<% end %>