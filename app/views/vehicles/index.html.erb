<h1>
  Listings Vehicles

  <%= form_tag vehicles_path, method: :get, :class => 'float-right form-inline' do %>
    <%= text_field_tag :term, params[:term], autofocus: true, :class => 'form-control mr-sm-2', :type => 'search', :placeholder => 'Search', autocomplete: 'off' %>
    <%= submit_tag 'Search', nombre: nil, :class => 'btn btn-outline-success my-2 my-sm-0' %>&nbsp&nbsp&nbsp&nbsp
    <%= link_to "", vehicle_new_path, class: 'btn btn-primary fas fa-plus rounded-1 float-right form-inline' %>
  <% end %>

</h1>
<br>
<br>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Patent Number</th>
    <th>Chassis Number</th>
    <th>Client</th>
    <th>Color</th>
    <th>Model</th>
    <th>Edit or View</th>
  </tr>
  </thead>
  <% @vehicles.each  do |vehicle| %>
    <tbody>
    <tr>
      <th><%= vehicle.patent_number %></th>
      <td><%= vehicle.chassis_number %></td>
      <td><%= vehicle.client.clients_id.first_name %></td>
      <td><%= vehicle.colors_id %></td>
      <td><%= vehicle.vehicle_models_id %></td>
      <td>
        &nbsp&nbsp<%= link_to "", vehicle_edit_path(vehicle),  class:'btn btn-outline rounded-0 fas fa-pencil-alt fa-2x' %>&nbsp&nbsp
      </td>
    </tr>
    </tbody>
  <% end %>

</table>

<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @vehicle_list %>
  </div>
  <%= will_paginate @vehicle_list, :container => false %>
</div>


