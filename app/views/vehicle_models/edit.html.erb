<h2>
  Edit Vehicle Model
  <%= link_to "Return", vehicleModels_path, class: 'btn btn-secondary rounded-1 float-right form-inline' %>
</h2>

<%= form_for @edit_vehicle_model do |f| %>
  <div class="container">
    <div class="row mt-3">
      <div class="col">
        <form action="">
          <div class="form-group row">
            <div class="col-12">
              <div class="row justify-content-center">
                <div class="col-12 col-sm-9 col-md-4">
                  <br>
                  <br>
                  <br>
                  <label><b>Brand</b></label>
                  <br>
                  <%= f.collection_select(:brand_id, VehicleModel.all.order(:vehicle_model_name), :id, :model_for_select, {:prompt => true}, {:class => 'form-control'}) %>
                  <br>
                  <label><b>Year of Production</b></label>
                  <br>
                  <%= f.number_field :year_of_production, :type => 'number', :class => 'form-control', :placeholder => 'Enter here year of production', autofocus: true, autocomplete: 'off', required: true %>
                  <br>
                  <label><b>Model</b></label>
                  <br>
                  <%= f.text_field :vehicle_model_name, :type => 'text', :class => 'form-control', :placeholder => 'Enter here vehicle model name', autofocus: true, autocomplete: 'off', required: true %>
                  <br>

                  <%= f.submit :Update, :class => 'btn btn-primary btn-block' %>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


<% end %>